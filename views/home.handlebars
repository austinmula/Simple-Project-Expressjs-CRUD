<div class="row">
    <div class="col-8">
        <div class="Box">
            <div class="container d-flex justify-content-center">
                <div class=" d-flex flex-column">
                    <h1 class="display-4 mt-3 mb-3">Add Student Score Data</h1>
                    <div class="container-sm shadow p-3 mb-5 bg-light rounded">
                        <form id="form" method="post" action="/studentsapi">
                            <div class="form-group">
                                <label for="Student id" class="mt-2">Student id:</label>
                                <input type="text" class="form-control" name="id" id="studentid" />
                            </div>

                            <div class="form-group">
                                <label for="Student name" class="mt-2">Student name:</label>
                                <input type="text" class="form-control" name="name" id="studentname" />
                            </div>

                            <div class="form-group">
                                <label for="Student score" class="mt-2">Student Score:</label>
                                <input type="text" class="form-control" name="score" id="studentscore" />
                            </div>

                            <div class="form-group">
                                <label for="Student grade" class="mt-2">Student Grade:</label>
                                <input type="text" class="form-control" name="grade" id="studentGrade" readonly />
                            </div>

                            <button type="submit" class="btn btn-primary btn-block mt-3">Add Member</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-4">
        <div class="container d-flex justify-content-center">
            <div class=" d-flex flex-column align-items-center">
                <h2 class="mt-3 display-4 mb-3 text-nowrap">New Students</h2>

                <table class="table table-striped table-light">
                    <thead>
                        <th>ID</th>
                        <th>name</th>
                        <th>score</th>
                    </thead>
                    <tbody id='content'>

                    </tbody>
                </table>

